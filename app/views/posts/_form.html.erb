<%= form_with(model: post) do |form| %>
  <% if post.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :title, style: "display: block" %>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :content, style: "display: block" %>
    <%= form.text_area :content %>
  </div>

  <div>
    <%= form.label :publishid_at, style: "display: block" %>
    <%= form.datetime_field :publishid_at %>
  </div>

  <div>
    <%= form.label :author_id, "Informe o id do Author:", style: "display: block" %>
    <%= form.text_field :author_id %>
  </div>

  <div class="field" style="margin: 5px 0 5px 0">
    <%= form.label :category, style: "display: block" %>
    <%= form.select :category, @categories, prompt: "Selecione uma categoria" %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
